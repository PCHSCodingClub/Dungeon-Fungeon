<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FIGHT"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player"
        android:id="@+id/playerFighterText"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enemy"
        android:id="@+id/enemyFighterText"
        android:layout_alignTop="@+id/playerFighterText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="VS"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/playerFighterText"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/useAttackButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ViewAnimator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewAnimator"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/useAttackButton"
        android:layout_alignLeft="@+id/enemyHP"
        android:layout_alignStart="@+id/enemyHP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HP"
        android:id="@+id/enemyHP"
        android:layout_below="@+id/enemyFighterText"
        android:layout_toLeftOf="@+id/enemyFighterText"
        android:layout_toStartOf="@+id/enemyFighterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HP"
        android:id="@+id/textView6"
        android:layout_below="@+id/enemyFighterText"
        android:layout_alignRight="@+id/enemyFighterText"
        android:layout_alignEnd="@+id/enemyFighterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HP"
        android:id="@+id/textView5"
        android:layout_below="@+id/playerFighterText"
        android:layout_toRightOf="@+id/playerFighterText"
        android:layout_toEndOf="@+id/playerFighterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HP"
        android:id="@+id/textView7"
        android:layout_below="@+id/playerFighterText"
        android:layout_alignLeft="@+id/playerFighterText"
        android:layout_alignStart="@+id/playerFighterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/whatHappensText"
        android:layout_above="@+id/useAttackButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>

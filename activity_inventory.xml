<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/HelmetInventory"
        android:onClick="onHelmetSlotClick"
        android:background="#e6c98a"
        android:layout_above="@+id/ArmorInventory"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ArmorInventory"
        android:onClick="onArmorSlotClick"
        android:background="#e6c98a"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/LeggingsInventory"
        android:onClick="onLeggingsSlotClick"
        android:background="#e6c98a"
        android:layout_below="@+id/ArmorInventory"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/RightHand"
        android:onClick="onLeftHandSlotClick"
        android:background="#e6c98a"
        android:layout_below="@+id/HelmetInventory"
        android:layout_toLeftOf="@+id/HelmetInventory"
        android:layout_toStartOf="@+id/HelmetInventory"
        android:cropToPadding="true"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/LeftHand"
        android:onClick="onRightHandSlotClick"
        android:background="#e6c98a"
        android:layout_below="@+id/HelmetInventory"
        android:layout_toRightOf="@+id/ArmorInventory"
        android:layout_toEndOf="@+id/ArmorInventory"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/BootsInventory"
        android:onClick="onBootsSlotClick"
        android:background="#e6c98a"
        android:layout_below="@+id/LeggingsInventory"
        android:layout_alignLeft="@+id/LeggingsInventory"
        android:layout_alignStart="@+id/LeggingsInventory"
        android:focusable="true"
        android:src="@mipmap/annoyingdog"
        android:contentDescription="annoyingdog"
        android:cropToPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/HealthInventory"
        android:layout_alignTop="@+id/HelmetInventory"
        android:layout_alignLeft="@+id/AgilityInventory"
        android:layout_alignStart="@+id/AgilityInventory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/AgilityInventory"
        android:layout_below="@+id/HealthInventory"
        android:layout_alignLeft="@+id/DefenceInventory"
        android:layout_alignStart="@+id/DefenceInventory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/DefenceInventory"
        android:layout_below="@+id/AgilityInventory"
        android:layout_alignLeft="@+id/AttackInventory"
        android:layout_alignStart="@+id/AttackInventory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/AttackInventory"
        android:layout_below="@+id/DefenceInventory"
        android:layout_alignLeft="@+id/IntelligenceInventory"
        android:layout_alignStart="@+id/IntelligenceInventory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/IntelligenceInventory"
        android:layout_below="@+id/AttackInventory"
        android:layout_alignLeft="@+id/RightHand"
        android:layout_alignStart="@+id/RightHand" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InventoryBackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/NameInventory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

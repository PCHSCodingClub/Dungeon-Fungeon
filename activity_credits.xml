<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/CreditsBack"
        android:onClick="onCreditsBackClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Coded by: "
                android:id="@+id/textView3"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Daniel Tabin and Hunter Keene"
                android:id="@+id/textView8"
                android:layout_alignTop="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Created by: "
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_toLeftOf="@+id/textView8"
                android:layout_toStartOf="@+id/textView8" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" Daniel Tabin"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Story by: "
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9"
                android:layout_toLeftOf="@+id/textView10"
                android:layout_toStartOf="@+id/textView10" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="VIncent Jedlica,         Daniel Tabin, and         Liam Osborn"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Art by: "
                android:id="@+id/textView13"
                android:layout_below="@+id/textView12"
                android:layout_toLeftOf="@+id/textView12"
                android:layout_toStartOf="@+id/textView12" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vincent Jedlica"
                android:id="@+id/textView14"
                android:layout_alignTop="@+id/textView13"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
